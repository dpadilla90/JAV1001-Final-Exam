<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryDark">@color/dark_primary_light</item>
        <item name="colorAccent">@color/accent_light</item>
    </style>

    <!-- Custom text appearance -->
    <style name="AppTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <!-- Custom button style -->
    <style name="AppButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Custom toolbar style -->
    <style name="AppToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textAppearance">@style/AppTextAppearance</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Custom TextView Style -->
    <style name="CustomTextViewStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_text_light</item>
    </style>

    <!-- Custom RadioButton Style -->
    <style name="CustomRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">16sp</item>
        <item name="buttonTint">@color/accent_light</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">14dp</item>
    </style>

    <style name="CustomSpinnerStyle" parent="@android:style/Widget.Spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:padding">8dp</item>
    </style>


</resources>
